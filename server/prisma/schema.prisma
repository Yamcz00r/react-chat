generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["windows", "darwin-arm64"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  user_id   Int        @id @default(autoincrement())
  email     String     @unique
  name      String     @unique
  password  String
  messages  Message[]
  chatRooms ChatRoom[]
}

model Message {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [user_id])
  userId     Int
  content    String
  timestamp  DateTime @updatedAt
  chatRoom   ChatRoom @relation(fields: [chatRoomId], references: [roomId])
  chatRoomId Int
}

model ChatRoom {
  roomId    Int       @id @default(autoincrement())
  room_name String
  users     User[]
  messages  Message[]
}
